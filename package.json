{
  "scripts": {
    "start": "gulp serve",
    "dev": "gulp watch",
    "build": "cross-env NODE_ENV=production gulp build",
    "build:dev": "cross-env NODE_ENV=development gulp build",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov --coverageReporters=html",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit:fix": "npm audit fix",
    "clean": "gulp clean",
    "serve": "gulp serve",
    "watch": "gulp watch",
    "validate": "npm run lint:check && npm run type-check && npm run test:ci",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "prepush": "npm run validate"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-uglify": "^3.0.2",
    "gulp-sass": "^5.1.0",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.71.1",
    "typescript": "^5.3.3"
  }
}
