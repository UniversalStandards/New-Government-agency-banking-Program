# GOFAP - Government Operations and Financial Accounting Platform
# Environment Configuration Template

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///gofap.db
DEV_DATABASE_URL=sqlite:///gofap_dev.db

# API Keys - Replace with your actual keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
MODERN_TREASURY_API_KEY=your_modern_treasury_api_key_here

# Application Settings
APP_NAME=GOFAP
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@government.gov
MAIL_PASSWORD=your-email-password

# Security Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# External Service URLs
MODERN_TREASURY_BASE_URL=https://app.moderntreasury.com/api
STRIPE_BASE_URL=https://api.stripe.com

# Monitoring and Logging
LOG_TO_STDOUT=False
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Government-specific Settings
GOVERNMENT_ENTITY_NAME=Office of Finance, Accounting, and Procurement Services
GOVERNMENT_ACRONYM=OFAPS
CONTACT_EMAIL=gofap@ofaps.spurs.gov
CONTACT_PHONE=(844) 697-7877 ext 6327

# Features Flags
ENABLE_STRIPE=True
ENABLE_MODERN_TREASURY=True
ENABLE_GUI=True
ENABLE_API_DOCS=True