
run = "python3 main.py"
modules = ["python-3.12", "postgresql-16"]

[nix]
channel = "stable-22_11"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[env]
PYTHONPATH = "${REPL_HOME}/src:${PYTHONPATH}"
FLASK_APP = "main.py"
FLASK_ENV = "development"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "main.py"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Database Setup"
author = 21422690
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 init_db.py"

[[workflows.workflow]]
name = "Development Server"
author = 21422690
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45543
externalPort = 3000
