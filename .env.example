# Flask Configuration
FLASK_DEBUG=True
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///gofap.db

# API Keys - Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# API Keys - Modern Treasury
MODERN_TREASURY_API_KEY=your_modern_treasury_api_key_here
MT_ORGANIZATION_ID=your_mt_organization_id_here

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_SANDBOX=true

# Data Import Configuration
LINEAR_API_KEY=your_linear_api_key
LINEAR_WORKSPACE_ID=your_linear_workspace_id
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_ORG=your_github_organization

# Sync Settings
SYNC_INTERVAL_MINUTES=60
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=gofap.log

# Security Settings
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password